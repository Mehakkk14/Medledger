rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Hospitals collection - users can only read/write their own profile
    match /hospitals/{hospitalId} {
      allow read: if isOwner(hospitalId);
      allow write: if isOwner(hospitalId);
      allow create: if isAuthenticated();
    }
    
    // Medical Records collection
    match /medicalRecords/{recordId} {
      // Anyone can read medical records (for public verification)
      allow read: if true;
      
      // Only the hospital that created the record can write to it
      allow create: if isAuthenticated() && 
                      request.resource.data.hospitalUid == request.auth.uid;
      
      allow update: if isAuthenticated() && 
                       resource.data.hospitalUid == request.auth.uid;
      
      // Only owner can delete
      allow delete: if isAuthenticated() && 
                       resource.data.hospitalUid == request.auth.uid;
    }
    
    // Logs collection - only authenticated users can write, admins can read
    match /logs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Logs are immutable
    }
    
    // Analytics collection - only authenticated users can write
    match /analytics/{analyticsId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Analytics are immutable
    }
  }
}
